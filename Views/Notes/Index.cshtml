@model IEnumerable<Note>
@{
    ViewData["Title"] = "My Notes";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="fas fa-sticky-note text-primary"></i> My Notes</h1>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus"></i> Create New Note
        </a>
    </div>

    @if (!Model.Any())
    {
        <div class="text-center py-5">
            <i class="fas fa-file-alt fa-5x text-muted mb-3"></i>
            <h3 class="text-muted">No notes yet</h3>
            <p class="text-muted">Create your first note to get started!</p>
            <a asp-action="Create" class="btn btn-primary btn-lg">
                <i class="fas fa-plus"></i> Create Your First Note
            </a>
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var note in Model)
            {
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card h-100 shadow-sm note-card @(note.IsIncognito ? "incognito-note" : "")">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start mb-2">
                                <h5 class="card-title">
                                    @if (note.IsIncognito)
                                    {
                                        <i class="fas fa-user-secret text-danger"></i>
                                    }
                                    @note.Title
                                </h5>
                                <div class="btn-group btn-group-sm">
                                    <a asp-action="Details" asp-route-id="@note.Id" class="btn btn-outline-primary btn-sm" title="View">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@note.Id" class="btn btn-outline-warning btn-sm" title="Edit">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@note.Id" class="btn btn-outline-danger btn-sm" title="Delete">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                </div>
                            </div>
                            <div class="note-preview" style="font-family: @note.FontFamily; color: @note.TextColor;">
                                @Html.Raw(note.Content.Length > 150 ? note.Content.Substring(0, 150) + "..." : note.Content)
                            </div>
                            <div class="card-footer bg-transparent border-0 mt-2">
                                <small class="text-muted">
                                    <i class="fas fa-clock"></i> @note.UpdatedAt.ToString("MMM dd, yyyy")
                                </small>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
